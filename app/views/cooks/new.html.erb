<div class="b">
  <%= form_for @cook do |f| %>
    <div class="field">
      <%= f.label :料理名 %>  
      <%= f.text_field :cooking_name, class:"cook2" %>
      <br>
      <%= f.label :作り方 %>  
      <%= f.text_area :how_to_make, class:"cook3" %>
      <h5>手軽さ</h5>
      <div class="post_form">
        <%= f.radio_button :easy, 5 ,id: 'star1'%>
        <label for="star1"><span class="text">簡単</span>★</label>
        <%= f.radio_button :easy, 4 ,id: 'star2'%>
        <label for="star2"><span class="text">やや簡単</span>★</label>
        <%= f.radio_button :easy, 3 ,id: 'star3'%>
        <label for="star3"><span class="text">普通</span>★</label>
        <%= f.radio_button :easy, 2 ,id: 'star4'%>
        <label for="star4"><span class="text">やや難しい</span>★</label>
        <%= f.radio_button :easy, 1 ,id: 'star5'%>
        <label for="star5"><span class="text">難しい</span>★</label>
      </div>
      <h5>美味しさ</h5>
      <div class="post_form">
      <%= f.radio_button :deliciousness,  5 ,id: 'star6'%>
      <label for="star6"><span class="text">5</span>★</label>
      <%= f.radio_button :deliciousness,  4 ,id: 'star7'%>
      <label for="star7"><span class="text">4</span>★</label>
      <%= f.radio_button :deliciousness, 3 ,id: 'star8'%>
      <label for="star8"><span class="text">3</span>★</label>
      <%= f.radio_button :deliciousness , 2 ,id: 'star9'%>
      <label for="star9"><span class="text">2</span>★</label>
      <%= f.radio_button :deliciousness , 1 ,id: 'star10'%>
      <label for="star10"><span class="text">1</span>★</label>
    </div>
    <div class="field">
      <%= f.label :料理の写真 %>
      <%= f.file_field :image %>
    </div>
    <%= f.submit "投稿する" %>  
  <% end %> 
</div>

